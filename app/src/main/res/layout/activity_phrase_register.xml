<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Presentador.Activities.PhraseRegisterActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fraseEs"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/fraseEsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fraseEsp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fraseAr"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/fraseArb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fraseArb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grabador"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etCarpeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ejemploGrabador" />

    <Button
        android:id="@+id/botonGrabarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/microphone"
        android:drawablePadding="5dp"
        android:onClick="recordAudio"
        android:layout_gravity="center"
        android:text="Grabar audio"/>


    <Button
        android:id="@+id/botonRegistrarFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/databaseplus"
        android:drawablePadding="5dp"
        android:onClick="registerPhrase"
        android:layout_gravity="center"
        android:text="Enviar"
        android:textSize="20dp"/>




</LinearLayout>
